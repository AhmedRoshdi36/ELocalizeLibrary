@{
    ViewData["Title"] = "Home - Library Management System";
}


<!-- Features Section -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold text-dark mb-3">Library Management Features</h2>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-book fa-2x"></i>
                    </div>
                    <h4 class="card-title fw-bold">Book Management</h4>
                    <p class="card-text text-muted">Add, edit, and organize your book collection with detailed information including covers, genres, and copies.</p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-outline-primary">Manage Books</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-handshake fa-2x"></i>
                    </div>
                    <h4 class="card-title fw-bold">Borrowing System</h4>
                    <p class="card-text text-muted">Track book borrowing and returns with automatic copy management and transaction history.</p>
                    <a asp-controller="Borrowing" asp-action="Index" class="btn btn-outline-success">Borrow Books</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                    <h4 class="card-title fw-bold">Analytics & History</h4>
                    <p class="card-text text-muted">View detailed borrowing history, track popular books, and maintain comprehensive transaction records.</p>
                    <a asp-controller="Borrowing" asp-action="History" class="btn btn-outline-info">View History</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Quick Actions Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h2 class="display-6 fw-bold text-dark">Quick Actions</h2>
            <p class="lead text-muted">Get started with these common tasks</p>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6 col-lg-3">
            <a asp-controller="Books" asp-action="Create" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 quick-action-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-plus-circle text-primary fa-2x mb-3"></i>
                        <h5 class="card-title fw-bold text-dark">Add New Book</h5>
                        <p class="card-text text-muted small">Add a new book to your collection</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a asp-controller="Borrowing" asp-action="Index" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 quick-action-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-handshake text-success fa-2x mb-3"></i>
                        <h5 class="card-title fw-bold text-dark">Borrow Book</h5>
                        <p class="card-text text-muted small">Borrow a book from the library</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a asp-controller="Borrowing" asp-action="History" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 quick-action-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-history text-info fa-2x mb-3"></i>
                        <h5 class="card-title fw-bold text-dark">View History</h5>
                        <p class="card-text text-muted small">Check borrowing history</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a asp-controller="Books" asp-action="Deleted" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 quick-action-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-trash text-warning fa-2x mb-3"></i>
                        <h5 class="card-title fw-bold text-dark">Deleted Books</h5>
                        <p class="card-text text-muted small">View archived books</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="display-6 fw-bold mb-3">Ready to Get Started?</h2>
        <p class="lead mb-4">Start managing your library efficiently today with our comprehensive system.</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="Books" asp-action="Index" class="btn btn-light btn-lg px-4">
                <i class="fas fa-book me-2"></i>Explore Books
            </a>
            <a asp-controller="Borrowing" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                <i class="fas fa-handshake me-2"></i>Start Borrowing
            </a>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
    }

    .feature-icon {
        transition: transform 0.3s ease;
    }

    .card:hover .feature-icon {
        transform: scale(1.1);
    }

    .quick-action-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .quick-action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
        }

    .stat-card {
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-3px);
        }

    .hero-section {
        position: relative;
        overflow: hidden;
    }

