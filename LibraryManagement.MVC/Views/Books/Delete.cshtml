@model LibraryManagement.DAL.Entities.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0 text-danger">Delete Book</h4>
                </div>
                <div class="card-body">
                    <p class="lead">Are you sure you want to delete this book?</p>

                    <div class="row align-items-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="d-flex align-items-center justify-content-center border bg-white" style="height:220px;">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" alt="Book Cover" class="p-2" style="max-height:200px; width:100%; object-fit:contain;" />
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center w-100 h-100">
                                        <span class="text-muted">No image</span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h5 class="mb-1">@Model.Title</h5>
                            <div class="text-muted mb-2">@Model.Author</div>
                            <p>@Model.Description</p>
                            <span class="badge bg-secondary">Copies: @Model.Copies</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 pb-3 d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
