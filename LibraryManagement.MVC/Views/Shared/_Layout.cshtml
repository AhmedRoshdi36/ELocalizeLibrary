<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagement.MVC</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryManagement.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light shadow-sm mb-2 py-1">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-4 text-dark d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="bg-primary text-white px-2 py-1 rounded me-2 fs-6">OPEN</span>
                    <span class="text-dark">LIBRARY</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-1 px-2 fs-6" asp-area="" asp-controller="Books" asp-action="Index">
                                <i class="fas fa-book me-1"></i>Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-1 px-2 fs-6" asp-area="" asp-controller="Borrowing" asp-action="Index">
                                <i class="fas fa-handshake me-1"></i>Borrow
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-1 px-2 fs-6" asp-area="" asp-controller="Borrowing" asp-action="History">
                                <i class="fas fa-history me-1"></i>Transactions
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-1 px-2 fs-6" asp-area="" asp-controller="Books" asp-action="Deleted">
                                <i class="fas fa-trash me-1"></i>Deleted Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-1 px-2 fs-6" asp-area="" asp-controller="Borrowing" asp-action="Archived">
                                <i class="fas fa-archive me-1"></i>Archived Transactions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-1 px-2 fs-6" asp-area="" asp-controller="Home" asp-action="Help">
                                <i class="fas fa-question-circle me-1"></i>Help
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-lg">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
